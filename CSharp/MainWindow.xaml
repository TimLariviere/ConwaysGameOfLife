<Window x:Class="CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="StartButton" Content="Start" Click="OnStartButtonClicked" Width="150" />
            <Button x:Name="RestartButton" Content="Restart" Click="OnRestartButtonClicked" Width="150" Margin="10,0,0,0" />
        </StackPanel>

        <local:MapControl  Grid.Row="1" x:Name="MapControl" Width="640" Height="320" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
